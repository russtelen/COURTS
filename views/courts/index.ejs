<% layout('layouts/boilerplate.ejs') %>
<h1 class="text-center">All Courts</h1>

<div class="row d-flex justify-content-center my-5">
  <% courts.map(court => { %>
  <div class="card col-12 col-md-5 m-1" style="width: 25rem">
    <img class="card-img-top" src="<%=court.image %>" alt="Card image cap" />
    <div class="card-body">
      <h5 class="card-title"><%= court.title %></h5>
      <p class="text-muted"><%= court.location%></p>
      <p class="card-text"><%= court.description %></p>
      <a href="#" class="btn btn-outline-primary">Court details</a>
    </div>
  </div>
  <% }) %>
</div>
